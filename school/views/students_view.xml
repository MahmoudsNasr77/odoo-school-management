<odoo>


    <record id="student_tree_view" model="ir.ui.view">


        <field name="name">student tree view</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <tree>
                
                <field name="student_id" string="Student Id"/>
                <field name="name" string="Student Name"/>
                <field name="date_of_birth" string="Student Birthday" optional="1"/>
                <field name="gender" string="Student Gender"/>
                <field name="address" string="Student Address" optional="1"/>
                <field name="phone" string="Student phone"/>
                <field name="gender" string="Student Gender"/>
                <field name="email" string="Student Email" optional="1"/>
                <field name="grade" string="Student grade"/>

            </tree>
        </field>
    </record>



    <record id="student_form_view" model="ir.ui.view">

        <field name="name">student form view</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="image" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                    <h1>
                         <strong>Student Id: </strong><field name="student_id" class="oe_inline" placeholder="Student Id"/>
                        <br/>   
                        <strong>Name: </strong><field name="name" class="oe_inline" placeholder="Student Name"/>
                    </h1>
                </div>
                    <group string="Basic Information">
                        <field name="date_of_birth" string="Student Birthday" />
                        <field name="gender" string="Student Gender"/>
                        <field name="address" string="Student Address" />   
                    </group>
                         <group string="Contact Information">
                         <field name="email" string="Student Email" />
                        <field name="gender" string="Student Gender"/>
                        <field name="phone" string="Student phone"/>
                    </group>
                         <group string="Grade Information">
                                   <field name="grade" string="Student grade"/>

                     </group>
                    
              <notebook>
                    <page string="Student Course">
                        <field name="enrollemet_sheet"  context="{'default_student_id': active_id}" >
                         <tree editable="bottom">
                             <field name="course_id" />
                            <field name="enrollment_date"  />
                        </tree>
                        </field>
                    </page>

                    <page string="Student Attendance">
                        <field name="attendence_sheet"  context="{'default_student_id': active_id}" >
                         <tree editable="bottom">
                             <field name="course_id" />
                             <field name="status"/>
                            <field name="attendance_date"  />
                        </tree>
                        </field>
                    </page>
                </notebook>
  

                </sheet>
  

            </form>
        </field>
    </record>

    <!-- Action to open Students -->
    <record id="admin_of_student_list_action" model="ir.actions.act_window">
        <field name="name">Students List</field>
        <field name="res_model">school.student</field>
        <field name="view_mode">tree,form</field>
             <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add your first Students
            </p>
        </field>
    </record>

    <!-- Students Management under Admin -->
    <menuitem
        id="students_management_menu"
        name="Students Management"
        parent="admin_menu_root"
        sequence="1"
        action="admin_of_student_list_action"
    />



</odoo>
